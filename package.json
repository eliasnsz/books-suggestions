{
  "name": "leia-ai",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "services:up": "docker compose -f infra/compose.development.yml up -d",
    "services:down": "docker compose -f infra/compose.development.yml down",
    "services:stop": "docker compose -f infra/compose.development.yml stop",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env up",
    "migrations:down": "node-pg-migrate -m infra/migrations --envPath .env down",
    "wait-for-postgres": "tsx infra/scripts/wait-for-postgres.ts",
    "dev": "pnpm services:up && next dev",
    "postdev": "pnpm services:down",
    "build": "next build",
    "start": "next start",
    "pretest": "pnpm services:up",
    "test": "pnpm wait-for-postgres && concurrently -p \"none\" -k --names next,vitest --hide next -s \"command-vitest\" \"next dev\" \"vitest run\"",
    "posttest": "pnpm services:down",
    "lint:check": "biome format",
    "lint:fix": "biome format --fix",
    "commit": "cz"
  },
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@faker-js/faker": "^9.8.0",
    "@types/async-retry": "^1.4.9",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.14",
    "@types/pg": "^8.15.0",
    "@types/react": "^19.1.3",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.2",
    "cz-emoji": "1.3.2-canary.2",
    "husky": "^9.1.7",
    "tsx": "^4.19.4",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "@radix-ui/react-progress": "^1.1.6",
    "@radix-ui/react-scroll-area": "^1.2.8",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-tabs": "^1.1.11",
    "@tailwindcss/postcss": "^4.1.5",
    "async-retry": "^1.3.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.510.0",
    "next": "^15.3.1",
    "next-connect": "^1.0.0",
    "node-emoji": "^2.2.0",
    "node-pg-migrate": "^7.9.1",
    "pg": "^8.15.6",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.5",
    "tw-animate-css": "^1.2.9"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-emoji"
    }
  }
}
