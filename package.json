{
  "name": "leia-ai",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "services:up": "docker compose -f infra/compose.yml up -d",
    "services:down": "docker compose -f infra/compose.yml down",
    "services:stop": "docker compose -f infra/compose.yml stop",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.local up",
    "wait-for-postgres": "tsx infra/scripts/wait-for-postgres.ts",
    "dev": "pnpm services:up && next dev",
    "postdev": "pnpm services:down",
    "build": "next build",
    "start": "next start",
    "pretest": "pnpm services:up",
    "test": "pnpm wait-for-postgres && concurrently -p \"none\" -k --names next,vitest --hide next -s \"command-vitest\" \"next dev\" \"vitest run\"",
    "posttest": "pnpm services:down",
    "lint:check": "biome format",
    "lint:fix": "biome format --fix"
  },
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/async-retry": "^1.4.9",
    "@types/node": "^22.15.14",
    "@types/pg": "^8.15.0",
    "@types/react": "^19.1.3",
    "concurrently": "^9.1.2",
    "tsx": "^4.19.4",
    "typescript": "5.8.3",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.5",
    "async-retry": "^1.3.3",
    "dotenv-expand": "^12.0.2",
    "next": "^15.3.1",
    "node-pg-migrate": "^7.9.1",
    "pg": "^8.15.6",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.5"
  }
}
